<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pratikm.PatientTracker.LoginActivty">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_sign_in"
        android:textSize="52sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="54dp"
        android:layout_marginLeft="99dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/editText_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="13"
        android:hint="Enter Username"
        android:inputType="text"
        android:layout_marginLeft="42dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="47dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/editText_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="13"
        android:inputType="textPassword"
        android:hint="Enter Password"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_username"
        android:layout_marginLeft="-7dp"
        app:layout_constraintLeft_toLeftOf="@+id/editText_username" />

    <Button
        android:id="@+id/button_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_sign_in"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_password"
        android:layout_marginRight="-10dp"
        app:layout_constraintRight_toRightOf="@+id/editText_password" />

    <Button
        android:id="@+id/button_sign_up"
        android:layout_width="80dp"
        android:layout_height="39dp"
        android:text="@string/button_sign_up"

        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginLeft="56dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_not_registered"
        android:textSize="22sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="129dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_password"
        android:layout_marginLeft="44dp"
        app:layout_constraintLeft_toLeftOf="@+id/editText_password" />

</android.support.constraint.ConstraintLayout>
</ScrollView>
