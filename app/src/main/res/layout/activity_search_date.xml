<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pratikm.PatientTracker.SearchDateActivity"
    android:background="@color/primary_light">

    <EditText
        android:id="@+id/editText_search_date"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:padding="10dp"
        android:hint="Enter the Date"
        android:gravity="center_horizontal"
        android:background="@color/accent"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_search_date" />

    <TextView
        android:id="@+id/tv_search_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_search_date"
        android:textSize="22sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="italic"
        android:textColor="@color/primary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="26dp" />

    <Button
        android:id="@+id/button_search_date"
        android:layout_width="101dp"
        android:layout_height="48dp"
        android:text="@string/button_search_date"
        android:background="@drawable/mybutton"
        android:padding="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_search_date"
        app:layout_constraintHorizontal_bias="0.501" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_search_date"
        android:layout_width="367dp"
        android:layout_height="374dp"
        android:background="@color/primary_light"
        tools:context="com.pratikm.PatientTracker.SearchDateActivity"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_search_date"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>
